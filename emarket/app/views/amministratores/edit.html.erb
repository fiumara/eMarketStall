<h1>Modifica Amministratore</h1>

<%= form_with(model: @amministratore, local: true) do |form| %>
  <div>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :cognome %>
    <%= form.text_field :cognome %>
  </div>

  <div>
    <%= form.label :telefono %>
    <%= form.text_field :telefono %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Ripeti password" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "Salva", class: "btn btn-primary" %>
    <%= link_to 'Annulla', amministratore_path(@amministratore), class: "btn" %>
  </div>
<% end %>

