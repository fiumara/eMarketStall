<h1>Il tuo carrello</h1>

<% if @carrello.carrello_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Prodotto</th>
        <th>Quantità</th>
        <th>Prezzo originale</th>
        <th>Prezzo scontato</th>
        <th>Totale</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @carrello.carrello_items.each do |item| %>
        <tr>
          <td><%= item.prodotto.nome_prodotto %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.prodotto.prezzo) %></td>
          <td>
            <% if item.prezzo_unitario < item.prodotto.prezzo %>
              <strong><%= number_to_currency(item.prezzo_unitario) %></strong>
              <small class="text-muted">(Scontato!)</small>
            <% else %>
              <%= number_to_currency(item.prodotto.prezzo) %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.totale) %></td>
          <td>
            <%= button_to "Rimuovi", carrello_item_path(item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>Totale carrello:</strong> <%= number_to_currency(@carrello.carrello_items.sum(&:totale)) %></p>
<% else %>
  <p>Il tuo carrello è vuoto.</p>
<% end %>

<%= button_to "Procedi al pagamento", ordini_path, method: :post, class: "btn btn-success" %>
