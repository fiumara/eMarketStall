<h1 class="mb-4">Il tuo carrello</h1>

<% if @carrello.carrello_items.any? %>
  <table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>Prodotto</th>
        <th>Quantità</th>
        <th>Prezzo originale</th>
        <th>Prezzo scontato</th>
        <th>Totale</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @carrello.carrello_items.each do |item| %>
        <tr>
          <td><%= item.prodotto.nome_prodotto %></td>
          <td><%= item.quantity %></td>
          
          <td>
            <% if item.prodotto.prezzo > item.prezzo_unitario %>
              <span class="text-muted" style="text-decoration: line-through;">
                <%= number_to_currency(item.prodotto.prezzo) %>
              </span>
            <% else %>
              <%= number_to_currency(item.prodotto.prezzo) %>
            <% end %>
          </td>

          <td>
            <% if item.prezzo_unitario < item.prodotto.prezzo %>
              <strong class="text-success"><%= number_to_currency(item.prezzo_unitario) %></strong>
              <br><small class="text-info">Sconto promozione</small>
            <% else %>
              <%= number_to_currency(item.prezzo_unitario) %>
            <% end %>
          </td>

          <td><%= number_to_currency(item.totale) %></td>

          <td>
            <%= button_to "Rimuovi", carrello_item_path(item), method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% totale_carrello = @carrello.carrello_items.sum(&:totale) %>

  <div class="mt-3">
    <p><strong>Totale carrello:</strong> <%= number_to_currency(totale_carrello) %></p>

    <% if current_user.punti_fedelta >= 100 %>
      <% sconto_fedelta = totale_carrello * 0.10 %>
      <p class="text-success">
        Sconto fedeltà disponibile: -<%= number_to_currency(sconto_fedelta) %> (verrà applicato al checkout)
      </p>
      <p><strong>Totale dopo sconto fedeltà:</strong> <%= number_to_currency(totale_carrello - sconto_fedelta) %></p>
    <% else %>
      <p class="text-muted">
        Hai <strong><%= current_user.punti_fedelta %> punti</strong>. Ne servono <strong>100</strong> per lo sconto fedeltà del 10%.
      </p>
    <% end %>
  </div>

  <%= button_to "Procedi al pagamento", ordini_path, method: :post, class: "btn btn-success mt-3" %>
<% else %>
  <p>Il tuo carrello è vuoto.</p>
<% end %>
