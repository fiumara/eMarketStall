<%= stylesheet_link_tag 'app', media: 'all' %>

<p><%= t_google(notice) %></p>
<h1 class="text-center mb-4"><%= t_google(@categorium.nome) %></h1>

<div class="row">
  <% @prodottos.each do |prodotto| %>
    <div class="col-md-4 mb-4">
  <div class="card h-100">
  <% if prodotto.immagini.attached? %>
  <%= image_tag prodotto.immagini.first.variant(resize_to_limit: [250, 250]), class: "card-img-top" %>
<% end %>

    <div class="card-body">
      <h5 class="card-title"><%= link_to t_google(prodotto.nome_prodotto), prodotto_path(prodotto), class: 'text-decoration-none' %></h5>
      <p class="card-text"><strong><%= t('comune.prezzo') %>:</strong> <%= number_to_currency(prodotto.prezzo, unit: "â‚¬") %></p>
    </div>
  </div>
</div>

  <% end %>
</div>
