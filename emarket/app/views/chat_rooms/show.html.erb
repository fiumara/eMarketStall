<div id="chat-room" data-chat-room-id="<%= @chat_room.id %>">
  <h2>Chat Room - <%= @chat_room.nome %></h2>

  <div id="messages" class="border rounded p-3" style="height: 400px; overflow-y: auto;">
    <% if @messaggi.any? %>
      <%= render @messaggi %>
    <% else %>
      <p class="text-muted">Nessun messaggio. Scrivi il primo!</p>
    <% end %>
  </div>

  <%= form_with(url: chat_room_messages_path(@chat_room), remote: true, id: 'new_message') do |form| %>
    <div class="form-group">
      <%= form.text_area :contenuto, placeholder: "Scrivi un messaggio...", class: "form-control", name: "messaggio[contenuto]" %>
    </div>
    <%= form.submit 'Invia', class: 'btn btn-primary' %>
  <% end %>
  
</div>



