<p id="notice"><%= t_google(notice) %></p>
<div class="page-wrapper">
  <h1><%= t('crono.titolo') %></h1>

  <% if @prodotti_visualizzati.any? %>
    <ul class="search-history">
      <% @prodotti_visualizzati.each do |prodotto| %>
        <li>
          <%= link_to t_google(prodotto.nome_prodotto), prodotto_path(prodotto) %>
        </li>
      <% end %>
    </ul>
    <div class="button-clear">
      <%= button_to t('crono.cancella'), cronologia_ricerche_path, method: :delete, data: { confirm: t('comune.conferma') }, class: "btn btn-danger" %>
    </div>
  <% else %>
    <p><%= t('crono.vuota') %>.</p>
  <% end %>
</div>
