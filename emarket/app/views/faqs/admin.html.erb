<p id="notice"><%= notice %></p>

<h1>Gestione FAQ</h1>

<table>
  <thead>
    <tr>
      <th>Domanda</th>
      <th>Risposta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @faqs.present? %>
      <% @faqs.each do |faq| %>
        <tr>
          <td><%= faq.domanda %></td>
          <td><%= faq.risposta %></td>
          <td><%= link_to 'Show', faq %></td>
          <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
          <td><%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New FAQ', new_faq_path %>
<%= link_to 'Back to FAQ', faqs_path %>
