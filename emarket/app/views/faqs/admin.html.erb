<p id="notice" style="color: green; font-weight: bold;"><%= t_google(notice) %></p>

<h1 style="text-align: center; margin-bottom: 2rem;"><%= t('faqs.ad_titolo') %></h1>

<div class="faq-management" style="max-width: 800px; margin: 0 auto;">
  <% if @faqs.present? %>
    <% @faqs.each do |faq| %>
      <div class="faq-item" style="background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 12px; padding: 1rem 1.5rem; margin-bottom: 1.5rem; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);">
        <p style="font-weight: bold; margin-bottom: 0.5rem;"><%= faq.id %>. <%= faq.domanda %></p>
        <p style="margin-bottom: 1rem;"><%= faq.risposta %></p>
        <div class="faq-actions" style="display: flex; gap: 1rem;">
          <%= link_to t('comune.modifica'), edit_faq_path(faq), class: 'btn btn-primary' %>
          <%= button_to t('comune.elimina'), faq_path(faq), method: :delete, data: { confirm: t('comune.conferma') }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p style="text-align: center;"><%= t('faqs.nessuna') %></p>
  <% end %>

  <div style="text-align: center; margin-top: 2rem;">
    <%= link_to t('faqs.aggiungi'), new_faq_path, class: 'btn btn-success', style: 'margin-right: 1rem;' %>
    <%= link_to t('comune.torna_pr'), amministratore_path(@amministratore), class: 'btn btn-secondary' %>
  </div>
</div>

