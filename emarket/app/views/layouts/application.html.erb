<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application', type: 'module', crossorigin: 'anonymous', 'data-turbo-track': 'reload' %>
  <%= csrf_meta_tags %>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

 
</head>
<body>
  <header>
    <div class="header-content">
      <%= link_to 'Emarketstall', root_path, class: 'logo-home' %>
      <button class="hamburger-menu" onclick="toggleRightSideMenu()">
        <div></div>
        <div></div>
        <div></div>
      </button>
    </div>
  </header>

  <div id="rightSideMenu" class="right-side-menu">
    <span class="close-btn" onclick="toggleRightSideMenu()">&times;</span>
    <% if logged_in? %>
      <% if current_user.is_a?(Acquirente) %>
      <%= link_to t_google('Profilo Acquirente'), acquirente_path(current_user), class: "btn btn-link text-decoration-none text-start w-100" %>
      <% if current_user.negozio.present? %>
        <%= link_to t_google('Il Tuo Negozio'), negozio_path(current_user.negozio), class: "btn btn-link text-decoration-none text-start w-100" %>
      <% else %>
        <%= link_to t_google('Crea Il Tuo Negozio'), new_negozio_path, class: "btn btn-link text-decoration-none text-start w-100" %>
      <% end %>      
        <%= link_to t_google('Carrello'), carrello_path, class: "btn btn-link text-decoration-none text-start w-100"  %>
        <%= link_to 'FAQs', faqs_path, class: "btn btn-link text-decoration-none text-start w-100"  %>
        <%= button_to t_google("Assistenza"), assistenza_chat_rooms_path, method: :post, class: "menu-link-button" %>
        <% elsif current_user.is_a?(Amministratore) %>
        <%= link_to t_google('Profilo Amministratore'), amministratore_path(current_user), class: "btn btn-link text-decoration-none text-start w-100"  %>
      <% end %>
      <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-danger w-100' %>
      <%= link_to t_google("🌍 Cambia lingua"), lingua_path, class: "btn btn-link text-decoration-none text-start w-100"  %>

    <% else %>
      <%= link_to t_google('Accedi'), login_path, class: "btn btn-link text-decoration-none text-start w-100"  %>
      <%= link_to 'FAQs', faqs_path, class: "btn btn-link text-decoration-none text-start w-100"  %>
      <%= link_to t_google("🌍 Cambia lingua"), lingua_path, class: "btn btn-link text-decoration-none text-start w-100"  %>

    <% end %>
  </div>

  <main class="container">
    <%= yield %>
  </main>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function toggleRightSideMenu() {
      const menu = document.getElementById("rightSideMenu");
      menu.style.display = menu.style.display === "block" ? "none" : "block";
    }
  </script>
</body>
</html>
