<%= form_with url: segnala_negozio_path(@negozio), method: :post, local: true do |form| %>
  <div>
    <%= form.label :motivo, "Motivo della segnalazione" %><br>
    <%= form.select :motivo, ["Contenuti inappropriati", "AttivitÃ  sospetta", "Frode", "Altro"], prompt: "Seleziona un motivo", required: true %>
  </div>

  <div>
    <%= form.label :note, "Note aggiuntive (opzionale)" %><br>
