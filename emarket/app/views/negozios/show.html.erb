<p id="notice"><%= notice %></p>

<h1>NEGOZIO</h1>

<div class="profile-container">
    <nav class="sidebar">
      <button class="sidebar-btn">RECENSIONI</button>
      <%= link_to 'STATISTICHE', statistiche_negozio_path(@negozio), class: 'btn btn-primary' %>
      <%= link_to 'gestione promozioni', negozio_promoziones_path, class: 'btn btn-primary' %>
      <%= link_to 'Aggiungi Prodotto', new_negozio_prodotto_path(@negozio), class: 'btn btn-primary' %>
      <button class="sidebar-btn">MESSAGGI</button>
      <%= link_to 'GESTIONE RESI', resi_index_path, class: 'btn btn-primary' %>
    </nav>

<body>

<p>  nome negozio: <%= @negozio.nome_negozio %></p>


<p>  Email: <%= @acquirente.email %>    Tel: <%= @negozio.telefono %></p>

<p><strong>Proprietario:</strong> <%= @negozio.acquirente.nome_utente %></p>

<p><button>Seguiti</button></p>


</body>

<div class="prodottos">
            <% if @negozio.prodottos.present? %>
                <% @negozio.prodottos.each do |prodotto| %>
                    <p><%= link_to prodotto.nome_prodotto, prodotto_path(prodotto) %></p>
                <% end %>
            <% else %>
                <p>No products available.</p>
            <% end %>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Prodotti</h5>
          <% if @negozio.prodottos.present? %>
            <ul class="list-group list-group-flush">
              <% @negozio.prodottos.each do |prodotto| %>
                <li class="list-group-item"><%= link_to prodotto.nome_prodotto, prodotto_path(prodotto) %></li>
              <% end %>
            </ul>
          <% else %>
            <p class="card-text">No products available.</p>
          <% end %>
        </div>
      </div>
      
      <div class="d-flex">
        <%= link_to 'Modifica Profilo', edit_negozio_path(@negozio), class: 'btn btn-warning mr-2' %>
        <%= link_to 'Elimina Profilo', negozio_path(@negozio), method: :delete, data: { confirm: 'Sei sicuro di voler eliminare il profilo?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
