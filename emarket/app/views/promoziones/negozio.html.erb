<p id="notice"><%= t_google(notice) %></p>
<body>
    <div class="promo-container">
        <h1 class="promo-header"><%= t('promo.negozio') %></h1>
        
        <table class="promo-table">
            
            <tbody>
                <% @promoziones.each do |promozione| %>
                    <tr>
                        <td>
                            <strong><%= t_google(promozione.nome) %></strong>
                            <br>
                            <%= t_google(promozione.descrizione) %>
                        </td>
                        <td><%= number_to_percentage(promozione.sconto, precision: 2) %></td>
                        <td>
                            <%= promozione.inizio.strftime("%d %b %Y") %> - <%= promozione.fine.strftime("%d %b %Y") %>
                        </td>
                        <td>
                            <% if promozione.prodotto.present? %>
                                <%= t('comune.prodotto') %>: <%= t_google(promozione.prodotto.nome_prodotto) %>
                                <% elsif promozione.categorium.present? %>
                                <%= t('promo.cat') %>: <%= promozione.categorium.nome %>
                                
                            <% else %>
                                <%= t('promo.tutto') %>
                            <% end %>
                        </td>
                        <td class="promo-actions">
                            <%= link_to t('comune.modifica'), edit_promozione_path(promozione), class: 'btn-edit' %>
                            <%= button_to t('comune.elimina'), promozione, method: :delete, data: { turbo: false, confirm: t('comune.conferma') }, class: 'btn-delete' %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        
        <%= link_to t('promo.aggiungi'), new_promozione_path, class: 'add-promo-btn' %>
    </div>
</body>
</html>
