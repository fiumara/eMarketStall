<h1>Dettaglio Reso</h1>

<p><strong>ID Reso:</strong> <%= @return_request.id %></p>
<p><strong>Ordine:</strong> <%= link_to "Ordine ##{@return_request.ordine.id}", ordine_path(@return_request.ordine) %></p>
<p><strong>Motivo:</strong> <%= @return_request.motivo %></p>
<p><strong>Data Richiesta:</strong> <%= @return_request.created_at.strftime("%d/%m/%Y %H:%M") %></p>

<p><strong>Stato:</strong> 
  <% case @return_request.stato %>
    <% when "in_attesa" %>
      <span class="badge bg-warning">In Attesa</span>
    <% when "approvato" %>
      <span class="badge bg-success">Approvato</span>
    <% when "rifiutato" %>
      <span class="badge bg-danger">Rifiutato</span>
    <% else %>
      <span class="badge bg-secondary"><%= @return_request.stato.capitalize %></span>
  <% end %>
</p>

<h3>Prodotti Resi:</h3>
<table class="table">
  <thead>
    <tr>
      <th>Nome Prodotto</th>
      <th>Quantit√† Resa</th>
    </tr>
  </thead>
  <tbody>
    <% @return_request.return_items.each do |item| %>
      <tr>
        <td><%= item.prodotto.nome_prodotto %></td>
        <td><%= item.quantita %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Torna ai Resi", return_requests_path, class: "btn btn-primary" %>

